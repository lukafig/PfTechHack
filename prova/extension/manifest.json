{
  "manifest_version": 2,
  "name": "GonePhishin' - Detector de Phishing",
  "version": "1.0.0",
  "description": "Extensão para detectar sites de phishing em tempo real com análise avançada e Machine Learning",
  
  "icons": {
    "48": "icons/icon-48.svg",
    "96": "icons/icon-96.svg"
  },

  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "notifications",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/icon-48.svg",
    "default_title": "GonePhishin'",
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    "warning.html"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "gonephishin@techacker.com"
    }
  }
}
